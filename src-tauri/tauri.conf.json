{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "quick emoji",
  "version": "0.1.0",
  "identifier": "com.quick.emoji",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "quick emoji",
        "width": 380,
        "height": 300,
        "minWidth": 300,
        "minHeight": 280,
        "resizable": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
